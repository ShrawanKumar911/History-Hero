<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".storycontent">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="257dp"
        android:src="@drawable/first">

    </ImageView>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="370dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/custom_login"
            android:backgroundTint="@color/lavendar"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:layout_margin="10dp"></TextView>

        </androidx.cardview.widget.CardView>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@color/purple"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@color/lavendar"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/helpl"
                android:layout_width="58dp"
                android:layout_height="47dp"
                android:layout_margin="10dp"
                android:src="@drawable/baseline_help_24">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/homel"
                android:layout_width="58dp"
                android:layout_height="47dp"
                android:layout_margin="10dp"
                android:src="@drawable/baseline_home_24">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@color/turquoiseGreen"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/feedbackl"
                android:layout_width="58dp"
                android:layout_margin="10dp"
                android:layout_height="47dp"
                android:src="@drawable/baseline_feedback_24">

            </ImageView>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>