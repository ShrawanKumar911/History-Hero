<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/platinum"
    tools:context=".StoYear">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/yellow">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Story Title"
        android:layout_marginLeft="20dp"
        android:textSize="40sp"></TextView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_login"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="The man who handcrafted the Constitution of India"
            android:textSize="20sp"></TextView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_login"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Kanaklata: The golden girl of Indiaâ€™s Freedom Struggle"
            android:textSize="20sp"></TextView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_login"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Shivaji Maharaj and the milkmaid"
            android:textSize="20sp"></TextView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/forth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_login"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="The brothers who founded a kingdom"
            android:textSize="20sp"></TextView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/fifth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_login"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Porus the fearless"
            android:textSize="20sp"></TextView>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="180dp"
        android:background="@color/purple"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@color/lavendar"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/helpl"
                android:layout_width="58dp"
                android:layout_height="47dp"
                android:layout_margin="10dp"
                android:src="@drawable/baseline_help_24">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/homel"
                android:layout_width="58dp"
                android:layout_height="47dp"
                android:layout_margin="10dp"
                android:src="@drawable/baseline_home_24">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@color/turquoiseGreen"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/feedbackl"
                android:layout_width="58dp"
                android:layout_margin="10dp"
                android:layout_height="47dp"
                android:src="@drawable/baseline_feedback_24">

            </ImageView>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>